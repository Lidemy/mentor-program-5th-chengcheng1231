<!DOCTYPE html>
<html>
<head>
    <%- include('../template/head') %>
</head>
<body>
    <%- include('../template/navbar') %>
    <div class="container-wrapper">
        <div class="layout">
            <div class="layout__space"></div>
            <div class="posts">
            <% users[0].hw17_contents.forEach(function(content) { %>
                <article class="post">
                    <div class="post__header">
                    <a class="post__title" href="/article/<%= content.id %>"><%= content.article_titile %></a>             
                    </div>
                    <div class="post__info">
                        <div class="post__authorName">
                            <%= content.username %>
                        </div>
                        <div class="post__time">
                            <%= content.createdAt %>
                        </div>
                        <% if(username){ %>
                        <div class="post__actions">
                            <a class="post__action-btn" href="/edit-article/<%= content.id %>">Edit</a>
                            <a class="post__action-btn" href="/delete-article/<%= content.id %>">Delete</a>
                        </div>
                        <% } %>
                    </div>
                    <div class="category__hr"></div>
                </article>
            <% }) %>
            </div>
            <div class="layout__space"></div>
        </div>
    </div>
    <footer>Copyright Â© 2020 <%=users[0].username %>'s Blog All Rights Reserved.</footer>
</body>
</html>